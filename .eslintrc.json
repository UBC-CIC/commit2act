{
  "root": true,
  "extends": [
    "react-app",
    "react-app/jest",
    "eslint:recommended",
    "plugin:react/recommended",
    "plugin:jsx-a11y/recommended"
  ],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "ignorePatterns": [
    "amplify/*",
    "backend/*",
    "build/*",
    "coverage/*",
    "docs/*",
    "node_modules/*",
    "public/*",
    "*.d.ts",
    "*.test.js"
  ],
  "overrides": [
    {
      "files": ["*.js"],
      "rules": {}
    }
  ]
}
